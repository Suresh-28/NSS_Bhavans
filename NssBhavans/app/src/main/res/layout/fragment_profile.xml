<?xml version="1.0"?>
<RelativeLayout
    android:background="@drawable/bg"
    android:padding="27dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="507dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/profilebg"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/userProfileAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sureshsyamala95026@gmail.com"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:id="@+id/userProfileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="97097054543"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="48dp" />

        <TextView
            android:id="@+id/userProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suresh"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="13dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:id="@+id/userProfileAddress"
        android:layout_marginTop="3dp" />

    <ImageView
        android:layout_height="82dp"
        android:layout_width="82dp"
        android:id="@+id/userProfileImage"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:id="@+id/dottedDivider"
        android:layout_marginTop="17dp"
        android:layout_below="@id/userProfileImage"
        android:src="#FAEFEF"
        android:layout_marginBottom="11dp"
        android:layerType="software"/>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/settingsContainer"
        android:layout_below="@+id/dottedDivider"
        android:weightSum="3"
        android:orientation="horizontal">

    <ImageView

        android:layout_height="32dp"
        android:layout_width="0dp"
        android:id="@+id/activities"
        android:src="@drawable/ic_attendance"
        android:layout_weight="1"/>

    <ImageView
        android:layout_height="32dp"
        android:layout_width="0dp"
        android:id="@+id/about"
        android:src="@drawable/ic_about"
        android:layout_weight="1"/>

    <ImageView
        android:layout_height="32dp"
        android:layout_width="0dp"
        android:id="@+id/editProfile"
        android:src="@drawable/ic_profile"
        android:layout_weight="1"/>

</LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/settingsTextContainer"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/settingsContainer"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Activities"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:text="About Nss"
            android:textStyle="bold"
        android:layout_weight="1"
        android:gravity="center"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Notifications"
        android:layout_weight="1"
        android:gravity="center"/>

</LinearLayout>

    <ImageView

        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:id="@+id/dottedDivider1"
        android:layout_marginTop="17dp"
        android:layout_below="@id/settingsTextContainer"
        android:src="#FAEFEF"
        android:layout_marginBottom="11dp"
        android:layerType="software"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:text="LogOut"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:id="@+id/logout"
        android:layout_below="@+id/dottedDivider1"
        android:drawableRight="@drawable/ic_logout"
        android:drawableEnd="@drawable/ic_logout"/>

</RelativeLayout>